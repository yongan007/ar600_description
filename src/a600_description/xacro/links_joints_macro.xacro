<?xml version="1.0" ?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Link description -->
  <xacro:macro name="link_stl" params="name color origin_xyz origin_rpy mass ixx iyy izz">
    <link name="${name}">
      <inertial>
        <mass value="${mass}" />
        <origin rpy="${origin_rpy}" xyz="${origin_xyz}" />
        <inertia ixx="${ixx}" ixy="0.0" ixz="0.0" iyy="${iyy}" iyz="0.0" izz="${izz}" />
      </inertial>
      <collision>
        <origin rpy="0 0 0" xyz="0 0 0" />
          <geometry>
            <mesh filename="package://a600_description/meshes_light/${name}.STL" />
          </geometry>
      </collision>
      <visual>
        <origin rpy="0 0 0" xyz="0 0 0" />
        <geometry>
            <mesh filename="package://a600_description/meshes_light/${name}.STL" />
        </geometry>
          <material name="${color}"/>
      </visual>
    </link>
  </xacro:macro>



   <!-- Link description with colision box-->
  <xacro:macro name="link_stl_box" params="name color origin_xyz origin_rpy collision_rpy collision_xyz box_size mass ixx iyy izz">
    <link name="${name}">
      <inertial>
        <mass value="${mass}" />
        <origin rpy="${origin_rpy}" xyz="${origin_xyz}" />
        <inertia ixx="${ixx}" ixy="0.0" ixz="0.0" iyy="${iyy}" iyz="0.0" izz="${izz}" />
      </inertial>
      <collision>
        <origin rpy="${collision_rpy}" xyz="${collision_xyz}" />
          <geometry>
          <box size="${box_size}"/>
            <!-- <mesh filename="package://a600_description/meshes_light/${name}.STL" /> -->
          </geometry>
      </collision>
      <visual>
        <!-- <origin rpy="${collision_rpy}" xyz="${collision_xyz}" /> -->
        <origin rpy="0 0 0" xyz="0 0 0" />
        <geometry>
            <!-- <box size="${box_size}"/> -->
            <mesh filename="package://a600_description/meshes_light/${name}.STL" />
        </geometry>
          <material name="${color}"/>
      </visual>
    </link>
  </xacro:macro>


 <!-- Joint description -->
  <xacro:macro name="revolute_joint" params="name axis_xyz origin_rpy origin_xyz parent child limit_e limit_l limit_u limit_v joint_damping joint_friction ">
    <joint name="${name}" type="revolute" >
      <axis xyz="${axis_xyz}" />
      <limit effort="${limit_e}" lower="${limit_l}" upper="${limit_u}" velocity="${limit_v}" />
      <origin rpy="${origin_rpy}" xyz="${origin_xyz}" />
      <parent link="${parent}" />
      <child link="${child}" />
      <dynamics damping="${joint_damping}" friction="${joint_friction}" />
    </joint>

    <!-- transmission -->
    <transmission name="trans_${name}">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="${name}">
        <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
      </joint>
      <actuator name="motor_${name}">
        <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>
  </xacro:macro>



 <!-- Joint description -->
  <xacro:macro name="fixed_joint" params="name axis_xyz origin_rpy origin_xyz parent child limit_e limit_l limit_u limit_v joint_damping joint_friction ">
    <joint name="${name}" type="fixed" >
      <axis xyz="${axis_xyz}" />
      <limit effort="${limit_e}" lower="${limit_l}" upper="${limit_u}" velocity="${limit_v}" />
      <origin rpy="${origin_rpy}" xyz="${origin_xyz}" />
      <parent link="${parent}" />
      <child link="${child}" />
      <dynamics damping="${joint_damping}" friction="${joint_friction}" />
    </joint>
  </xacro:macro>


<!-- Color -->

